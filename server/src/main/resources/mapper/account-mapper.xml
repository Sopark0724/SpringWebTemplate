<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.web.template.account.domain.dao">
    <select id="findAccountAll" resultType="hashmap">
        select * from account
    </select>

    <select id="findAccountById" resultType="com.web.template.user.domain.Account">
        select * from account where id = #{id}
    </select>

    <select id="findAccountFirstOrderByIdDesc" resultType="com.web.template.user.domain.Account">
        select * from account order by id desc limit 0, 1
    </select>

    <select id="findAccountNextId" resultType="Long">
        select (max(id) +1) from account
    </select>

    <update id="updateAccount" parameterType="com.web.template.user.domain.Account">
        update account set name = #{name} , password=#{password} , role= #{role} , username= #{username}
        where id = #{id}
    </update>

    <insert id="insertAccount" parameterType="com.web.template.user.domain.Account">
        insert into account
        (id, name, password, role, username)
        values (#{id}, #{name}, #{password}, #{role}, #{username})
    </insert>

    <delete id="deleteAccount" parameterType="com.web.template.user.domain.Account">
        delete from account
        where id = #{id}
    </delete>

</mapper>
