<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="BoardDAO">
    <insert id="insert" parameterType="Map">
        insert into board
        <foreach collection="params" item="value" index="key" open="("  separator=" ,"  close=")">
            ${key}
        </foreach>

        values

        <foreach collection="params" item="value" index="key" open="("  separator=" ,"  close=")">
            #{value}
        </foreach>
        ;
    </insert>

    <select id="findAll" resultType="hashmap">
        select * from board
    </select>

    <select id="findBoardAll" resultType="com.web.template.board.domain.dto.BoardDto">
        select * from board
    </select>

    <select id="findById" resultType="Map">
        select * from board where id = #{id}
    </select>

    <select id="findNextId" resultType="Long">
        select (max(id) +1) from board
    </select>

    <select id="findCountAll" resultType="Integer">
        select count(*) from board
    </select>

    <select id="findPage" parameterType="com.web.template.common.application.data.PageCommand" resultType="com.web.template.board.domain.dto.BoardDto">
        select * from board
        <if test="sort">
           order by ${properties} ${direction}
        </if>
    </select>


    <update id="update" parameterType="com.web.template.board.domain.dto.BoardDto">
        update board set contents = #{contents} , title =#{title} , user_id = #{user_id} , updated_at = getdate()
        where id = #{id}
    </update>

    <delete id="delete" parameterType="com.web.template.board.domain.dto.BoardDto">
        delete from board
        where id = #{id}
    </delete>

</mapper>
